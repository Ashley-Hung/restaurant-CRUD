<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">

    <!-- restaurant image -->
    <div class="col-12 col-md-7 col-lg-6 mx-auto">
      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>

    <!-- restaurant info -->
    <div class="col-12 col-md-5 col-lg-6 mx-auto">
      <p class="mb-1 mt-2">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5 mt-3 mx-2">{{restaurant.description}}</p>

      <div class="btn-group" role="group">
        <a href="/restaurants/{{restaurant._id}}/edit">
          <button class="btn btn-outline-primary mb-5">
            <i class="fas fa-edit mr-2"></i>Edit
          </button>
        </a>
        <form action="/restaurants/{{restaurant._id}}/delete" method="post" onsubmit="return deleteAlert()">
          <button class="btn btn-outline-danger ml-2" type="submit">
            <i class="fas fa-trash-alt mr-2"></i>Delete
          </button>
        </form>
      </div>
    </div>
  </div>
</div>